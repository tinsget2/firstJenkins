pipeline {
    agent any
    options {
        // Timeout counter starts AFTER agent is allocated
        timeout(time: 1, unit: 'SECONDS')
    }
    stages {
        stage('Build') {
            steps {
                javac BubbleSort.java
            }
        }
        stage('Run') {
            steps {
                java BubbleSort
            }
        }
    }
}